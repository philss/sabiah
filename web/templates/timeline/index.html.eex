<h2>Timeline</h2>

<div id='timeline-app'>
  <input type='text' v-model='newTweet'
    placeholder='What is happening?'>

  <button @click='postTweet' class='button'>Tweet</button>

  <ul class='timeline'>
    <li class='tweet' v-for='tweet in tweets'>
      <span class='tweet__author'>{{ tweet.username }}</span> - {{ tweet.name }}
      <span class='tweet__content'>{{ tweet.content }}</span>
    </li>
  </ul>
</div>
